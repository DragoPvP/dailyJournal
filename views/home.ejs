<% include partials/header.ejs %>
  
<div class="container mt-5">
  <h1 class="mb-5">Home</h1>
  <p><%= homeContent %></p>

  <% if(posts.length !== 0) { %>
    <h1 class="mt-5">Posts</h1>
    <hr>
  <% } %>

  <% posts.forEach(function(post) { %>
    <div class="p-2">
      <h3><%= post.title %></h3>
      <p class="lead"><%=post.content %></p>
    </div>
  <% }); %>
</div><!-- /container -->
  
